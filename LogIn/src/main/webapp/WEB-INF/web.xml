<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>no.amv.api.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>equipment</servlet-name>
        <servlet-class>no.amv.api.EquipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservations</servlet-name>
        <servlet-class>no.amv.api.ReservationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>leases</servlet-name>
        <servlet-class>no.amv.api.LeasesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin/equipment</servlet-name>
        <servlet-class>no.amv.api.admin.EquipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin/reservations</servlet-name>
        <servlet-class>no.amv.api.admin.ReservationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin/users</servlet-name>
        <servlet-class>no.amv.api.admin.UsersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>equipment</servlet-name>
        <url-pattern>/equipment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservations</servlet-name>
        <url-pattern>/reservations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>leases</servlet-name>
        <url-pattern>/leases</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin/equipment</servlet-name>
        <url-pattern>/admin/equipment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin/reservations</servlet-name>
        <url-pattern>/admin/reservations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin/users</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>auth</filter-name>
        <filter-class>no.amv.filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>no.amv.filters.AdminFilter</filter-class>
        <init-param>
            <param-name>role</param-name>
            <param-value>admin</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
</web-app>
